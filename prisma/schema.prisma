generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Department {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  code            String      @unique
  description     String?
  formations      Formation[]
  professors      Professor[]
}

model Formation {
  id           Int        @id @default(autoincrement())
  name         String
  code         String     @unique
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  level        String
  modules      Module[]
  students     Student[]
}

model Module {
  id             Int                @id @default(autoincrement())
  name           String
  code           String             @unique
  credits        Int
  formationId    Int
  formation      Formation          @relation(fields: [formationId], references: [id])
  semester       Int
  examSessions   ExamSession[]
  enrollments    ModuleEnrollment[]
}

model Student {
  id             Int                @id @default(autoincrement())
  studentNumber  String             @unique
  firstName      String
  lastName       String
  email          String             @unique
  password       String
  formationId    Int
  formation      Formation          @relation(fields: [formationId], references: [id])
  examEnrollments ExamEnrollment[]
  moduleEnrollments ModuleEnrollment[]
}

model Professor {
  id             Int                @id @default(autoincrement())
  professorNumber String            @unique
  firstName      String
  lastName       String
  email          String             @unique
  password       String
  departmentId   Int
  department     Department         @relation(fields: [departmentId], references: [id])
  role           String             @default("professor")
  examSessions   ExamSession[]
}

model Admin {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
}

model Dean {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  title     String
}

model ExamRoom {
  id        Int      @id @default(autoincrement())
  name      String
  capacity  Int
  building  String?
  examSessions ExamSession[]
}

model ExamSession {
  id              Int               @id @default(autoincrement())
  moduleId        Int
  module          Module            @relation(fields: [moduleId], references: [id])
  examRoomId      Int
  examRoom        ExamRoom          @relation(fields: [examRoomId], references: [id])
  professorId     Int
  professor       Professor         @relation(fields: [professorId], references: [id])
  sessionDate     DateTime
  startTime       String
  endTime         String
  duration        Int
  type            String
  status          String            @default("DRAFT") // DRAFT, PENDING_CHEF, PENDING_DEAN, PUBLISHED
  rejectionReason String?
  enrollments     ExamEnrollment[]
}

model ExamEnrollment {
  id             Int               @id @default(autoincrement())
  studentId      Int
  student        Student           @relation(fields: [studentId], references: [id])
  examSessionId  Int
  examSession    ExamSession       @relation(fields: [examSessionId], references: [id])
  grade          Float?
  attendance     String            @default("registered")
  @@unique([studentId, examSessionId])
}

model ModuleEnrollment {
  id        Int     @id @default(autoincrement())
  studentId Int
  student   Student @relation(fields: [studentId], references: [id])
  moduleId  Int
  module    Module  @relation(fields: [moduleId], references: [id])
  @@unique([studentId, moduleId])
}

model KPI {
  id                     Int    @id @default(autoincrement())
  tempsGenerationEDT     Int
  nbExamensPlanifies     Int
  tauxConflits           Float
  tauxValidation         Float
  heuresProfPlanifiees   Int
  amphisUtilises         Int
  sallesUtilisees        Int
}

model Conflict {
  id          Int    @id @default(autoincrement())
  type        String
  severite    String
  message     String
  details     String?
  departement String
  status      String @default("non_resolu")
}

model UniversityInfo {
  id                Int    @id @default(autoincrement())
  name              String
  totalStudents     Int
  totalDepartments  Int
  totalFormations   Int
}
